              include ../../images/question.svg
            .profileCard__sectionTitle!='Предпочтительный способ оплаты'
            .profileCard__content.profileCard__content--paymentMethod
              include ../checkout/pug/payment
              .profileCard__centerButton
                a(href="javascript:void(0);" data-popupname="info-save").button.buttonFixSize.js-popup-open!='Сохранить изменения'


          .profileCard__section.profileCard__deliveryAddressInfo
            .accordion__help.js-accordion__help.accordion__help--personalInfo(
              class="hint hint--white hint--left hint--userSale"
              data-popupname="hintfileattach"
              aria-label="Текстовая подсказка по соответствующей теме."
            )
              include ../../images/question.svg
            .profileCard__sectionTitle!='Получение сообщений и уведомлений по e-mail'
            .profileCard__content
              .checkout__payment.notifications--profileCard
                .form-element.form-element--profileCard
                  label.label.label--checkbox
                    input(type='checkbox', checked='').form-control.js-form-validate__checked
                    .icon.icon--checkbox
                    .label__text Дублировать рекламные сообщения на e-mail
                .form-element.form-element--profileCard
                  label.label.label--checkbox
                    input(type='checkbox').form-control
                    .icon.icon--checkbox
                    .label__text Дублировать сообщения для Покупателей на e-mail
                .form-element.form-element--profileCard
                  label.label.label--checkbox
                    input(type='checkbox', checked='').form-control.js-form-validate__checked
                    .icon.icon--checkbox
                    .label__text Дублировать персональные сообщения на e-mail
                .form-element.form-element--profileCard
                  label.label.label--checkbox
                    input(type='checkbox').form-control
                    .icon.icon--checkbox
                    .label__text Дублировать новости и события на e-mail
                .form-element.form-element--profileCard
                  label.label.label--checkbox
                    input(type='checkbox').form-control
                    .icon.icon--checkbox
                    .label__text Сообщать на e-mail о появлении новой статьи

              .profileCard__centerButton
                a(href="javascript:void(0);" data-popupname="info-save").button.buttonFixSize.js-popup-open!='Сохранить изменения'

