                  .accordion__content.accordion__content--companyInfo.js-accordion__content
                    .accordion__content-wrap.accordion__wrap--companyInfo.js-accordion__content-wrap
                      .accordion__group--companyInfo
                        each item in company
                          +companyInformationFull(
                            item.nameCompany,
                            item.brand,
                            item.site,
                            item.phoneCompany,
                            item.email,
                            item.city,
                            item.country,
                            item.inn,
                            item.kpp,
                            item.okato,
                            item.oktmo,
                            item.okpo,
                            item.ogrn,
                            item.okved2,
                            item.nameBank,
                            item.addressBank,
                            item.checkingAccount,
                            item.correspondentAccount,
                            item.bik,
                            item.positionDirector,
                            item.lastNameDirector,
                            item.firstNameDirector,
                            item.patronymicDirector,
                            item.positionAccountant,
                            item.lastNameAccountant,
                            item.firstNameAccountant,
                            item.patronymicAccountant,
                            item.factCountry,
                            item.factZipcode,
                            item.factRegion,
                            item.factCity,
                            item.factStreet,
                            item.factHouse,
                            item.factFlat,
                            item.mailingAddress
                          )
                          a(href="javascript:void(0);" data-popupname="delete-company-01").js-popup-open.button.buttonDelete.buttonDelete--company
                            .icon.icon--close.icon--close-smaller.icon--close-red.icon--delete
                            span Удалить юридическое лицо

                // - «Электрокомплектсервис» ЗАО, г. Ангарск
                .accordion__item.js-accordion__item.accordion__item--companyInfo
                  a(href="javascript:void(0);").accordion__header.js-accordion__header
                    .companyInfo__icon
                    .companyInfo__nameCompany!='«Электрокомплектсервис» ЗАО, г. Ангарск'

                    .accordion__toggle.js-accordion__toggle
                  .accordion__content.accordion__content--companyInfo.js-accordion__content
                    .accordion__content-wrap.accordion__wrap--companyInfo.js-accordion__content-wrap
                      .accordion__group--companyInfo
                        each item in company
                          +companyInformationFull(
                            item.nameCompany,
                            item.brand,
                            item.site,
                            item.phoneCompany,
                            item.email,
                            item.city,
                            item.country,
                            item.inn,
                            item.kpp,
                            item.okato,
                            item.oktmo,
                            item.okpo,
                            item.ogrn,
                            item.okved2,
                            item.nameBank,
                            item.addressBank,
                            item.checkingAccount,
                            item.correspondentAccount,
                            item.bik,
                            item.positionDirector,
                            item.lastNameDirector,
                            item.firstNameDirector,
                            item.patronymicDirector,
                            item.positionAccountant,
                            item.lastNameAccountant,
                            item.firstNameAccountant,
                            item.patronymicAccountant,
                            item.factCountry,
                            item.factZipcode,
                            item.factRegion,
                            item.factCity,
                            item.factStreet,
                            item.factHouse,
                            item.factFlat,
                            item.mailingAddress
                          )
                          a(href="javascript:void(0);" data-popupname="delete-company-01").js-popup-open.button.buttonDelete.buttonDelete--company
                            .icon.icon--close.icon--close-smaller.icon--close-red.icon--delete
                            span Удалить юридическое лицо

                // - «АвтопромГазМяс» ООО, г. Тула
                .accordion__item.js-accordion__item.accordion__item--companyInfo
                  a(href="javascript:void(0);").accordion__header.js-accordion__header
                    .companyInfo__icon
                    .companyInfo__nameCompany!='«АвтопромГазМяс» ООО, г. Тула'

                    .accordion__toggle.js-accordion__toggle
                  .accordion__content.accordion__content--companyInfo.js-accordion__content
                    .accordion__content-wrap.accordion__wrap--companyInfo.js-accordion__content-wrap
                      .accordion__group--companyInfo
                        each item in company
                          +companyInformationFull(
                            item.nameCompany,
                            item.brand,
                            item.site,
                            item.phoneCompany,
                            item.email,
                            item.city,
                            item.country,
                            item.inn,
                            item.kpp,
                            item.okato,
                            item.oktmo,
                            item.okpo,
                            item.ogrn,
                            item.okved2,
                            item.nameBank,
                            item.addressBank,
                            item.checkingAccount,
                            item.correspondentAccount,
                            item.bik,
                            item.positionDirector,
                            item.lastNameDirector,
                            item.firstNameDirector,
                            item.patronymicDirector,
                            item.positionAccountant,
                            item.lastNameAccountant,
                            item.firstNameAccountant,
                            item.patronymicAccountant,
                            item.factCountry,
                            item.factZipcode,
                            item.factRegion,
                            item.factCity,
                            item.factStreet,
                            item.factHouse,
                            item.factFlat,
                            item.mailingAddress
                          )
                          a(href="javascript:void(0);" data-popupname="delete-company-01").js-popup-open.button.buttonDelete.buttonDelete--company
                            .icon.icon--close.icon--close-smaller.icon--close-red.icon--delete
                            span Удалить юридическое лицо

                .profileCard__rightButton
                  a(href="javascript:void(0);" data-popupname="add-new-company").button.buttonFixSize.js-popup-open!='Добавить юридическое лицо'

          .profileCard__section.profileCard__fizlicaInfo
            .accordion__help.js-accordion__help.accordion__help--personalInfo(
              class="hint hint--white hint--left hint--userSale"
              data-popupname="hintfileattach"
              aria-label="Текстовая подсказка по соответствующей теме."
            )
              include ../../images/question.svg
            .profileCard__sectionTitle!='Информация о физических лицах'
            .usiSaleTeam__group.personCardGroup
              each item in physicalPersonCard
                +physicalPersonCard(
                  item.image,
                  item.fio,
                  item.mobile,
                  item.email,
                  true
                )
            .profileCard__rightButton
              a(href="javascript:void(0);" data-popupname="add-new-fizlico").button.buttonFixSize.js-popup-open!='Добавить физическое лицо'

          .profileCard__section.profileCard__deliveryAddressInfo
            .accordion__help.js-accordion__help.accordion__help--personalInfo(
              class="hint hint--white hint--left hint--userSale"
              data-popupname="hintfileattach"
              aria-label="Текстовая подсказка по соответствующей теме."
            )
              include ../../images/question.svg
            .profileCard__sectionTitle!='Адреса доставки'
            .usiSaleTeam__group.personCardGroup
              each item in deliveryAddresses
                +deliveryAddresses(
                  item.icon,
                  item.address,
                  true
                )
            .profileCard__rightButton
              a(href="javascript:void(0);" data-popupname="add-new-delivery-address").button.buttonFixSize.js-popup-open!='Добавить адрес'

          .profileCard__section.profileCard__deliveryAddressInfo
            .accordion__help.js-accordion__help.accordion__help--personalInfo(
              class="hint hint--white hint--left hint--userSale"
              data-popupname="hintfileattach"
              aria-label="Текстовая подсказка по соответствующей теме."
            )
              include ../../images/question.svg
            .profileCard__sectionTitle!='Предпочтительный способ получения заказов'
            .profileCard__content.profileCard__content--deliveryMethod
              include ../checkout/pug/receive
              .profileCard__centerButton
                a(href="javascript:void(0);" data-popupname="info-save").button.buttonFixSize.js-popup-open!='Сохранить изменения'


          .profileCard__section.profileCard__deliveryAddressInfo
