      script(src = "https://api-maps.yandex.ru/2.1/?apikey=bb14b62c-4405-4ce3-9db0-762219c7cb4a&lang=ru_RU" type="text/javascript")
      include ../../components/content-header/content-header-lk
      .profileCard
        .profileCard__wrap
          .profileCard__section.profileCard__personaInfo
            .accordion__help.js-accordion__help.accordion__help--personalInfo(
              class="hint hint--white hint--left hint--userSale"
              data-popupname="hintfileattach"
              aria-label="Текстовая подсказка по соответствующей теме."
            )
              include ../../images/question.svg
            .profileCard__sectionTitle!='Персональная информация'
            .profileCard__group
              each item in person
                +personInformation(
                  item.image,
                  item.fio,
                  item.id,
                  item.typeProfile,
                  item.mobile,
                  item.email,
                  item.position,
                  item.pol,
                  item.discount,
                  item.bonus,
                  item.termsPayment,
                  item.balance,
                  item.credit,
                  [
                    {
                      type: 'delete-profile',
                      label: 'Удалить профиль',
                      href: 'javascript:void(0);',
                      class: 'js-popup-open',
                      dataPopupname: 'delete-profile-01'
                    },
                    {
                      type: 'edit-password',
                      label: 'Изменить пароль',
                      href: 'javascript:void(0);',
                      class: 'js-popup-open',
                      dataPopupname: 'edit-password'
                    },
                    {
                      type: 'edit-profile',
                      label: 'Редактировать профиль',
                      href: 'javascript:void(0);',
                      class: 'js-popup-open',
                      dataPopupname: 'edit-person-info'
                    }
                  ]
                )

          .profileCard__section.profileCard__companyInfo
