extends ../layout.pug

block content
  .content
    .container
      include ../../components/content-header/content-header
      .lights
        if catalogTitle
          .lights__title!= catalogTitle
        if catalogDescr
          .lights__description.text-editor!= catalogDescr
        .lights__info
          a(href="javascript:void(0);").lights__info-item
            .icon.icon--inline.icon--gear: include ../../images/gear.svg
            .lights__info-item-text Подобрать блок аварийного<br> питания
          .lights__info-item.lights__info-item--long
            .icon.icon--inline.icon--blank: include ../../images/blank.svg
            .lights__info-item-box
              .lights__info-item-text Блоки аварийного питания. Техническое описание
              .lights__info-item-wrap
                a(href="javascript:void(0);").lights__info-part ТР0
                a(href="javascript:void(0);").lights__info-part ТР1
                a(href="javascript:void(0);").lights__info-part ТР2
                a(href="javascript:void(0);").lights__info-part ТР3
                a(href="javascript:void(0);").lights__info-part ТР4
                a(href="javascript:void(0);").lights__info-part ТР5
                a(href="javascript:void(0);").lights__info-part ТР6
                a(href="javascript:void(0);").lights__info-part ТР7
          a(href="javascript:void(0);" data-popupname="lights").lights__info-item.lights__info-item--empty.js-popup-open
            .icon.icon--inline.icon--info: include ../../images/info.svg
            .lights__info-item-text Справочная информация

        include ../common/lights-text-common
        include ../common/promo
        .tech-descr
