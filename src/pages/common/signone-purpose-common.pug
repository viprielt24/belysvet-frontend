//+select-custom(registrationCountry, 'Укажите страну', 'default select-custom--simple')

.select-custom.select-custom--default
  select.form-control.js-select-custom
    - counter = 0;
    each item in purpose
      //- неправильное условие на отсутствие выделенного пункта
      if !item.selected & !counter
        option(placeholder) Назначение
        - counter++
      if item.value
        option(value= item.value selected= item.selected)= item.title