include ../../components/select-custom/select-custom

//+select-custom(registrationOrganization, 'Выберите свою компанию из списка', 'default select-custom--simple')

.select-custom.select-custom--default.select-custom--simple
  select.form-control.js-select-org
    - counter = 0;
    each item in registrationOrganization
      //- неправильное условие на отсутствие выделенного пункта
      if !item.selected & !counter
        option(placeholder) Выберите свою компанию из списка
        - counter++
      if item.value
        option(value= item.value selected= item.selected)= item.title