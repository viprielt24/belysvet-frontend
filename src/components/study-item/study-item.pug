include ../../components/tag/tag

mixin study-item(item)
  .catalog__item
    .catalog__item-media: .pic
      img(src= item.img).pic__img
      if item.play
        a(href= item.play.href).pic__link
          .icon.icon--inline.icon--play: include ../../images/play.svg
          .pic__link-text смотреть видео
    .catalog__item-box
      .tagline
        each unit in item.tags
          +tag(unit)
      .title!= item.title
      .date= item.date