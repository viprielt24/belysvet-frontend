mixin lights-text-item(item)
  if isDesktop
    .catalog__item
      if item.description
        .part
          .part__wrap.part__wrap--text!= item.description

          a(href="javascript:void(0);").part__title проекты
          .part__button: a(href="javascript:void(0);").button Подробнее

      if item.subtitle
        .subtitle!= item.subtitle
      if item.title
        .title!= item.title
      if item.img
        .pic: img(src='/images/thumbs/thumb.jpg' data-src= item.img).pic__img.lazyload
      if item.price
        .descr= 'от ' + item.price + ' ₽'
      if item.link
        a(href= item.link.href).link= item.link.title
  else
    .catalog__item
      if item.subtitle
        .subtitle!= item.subtitle
      if item.title
        .title!= item.title
      if item.img
        .pic: img(src='/images/thumbs/thumb.jpg' data-src= item.img).pic__img.lazyload
      if item.price
        .descr= 'от ' + item.price + ' ₽'
      if item.link
        a(href= item.link.href).link= item.link.title
      a(href="javascript:void(0);").part__title проекты
      .part__button: a(href="javascript:void(0);").button Подробнее