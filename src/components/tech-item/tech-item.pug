mixin tech-item(item)
  a(href= item.link.href data-bgset= item.img).catalog__item.lazyload
    if item.title
      .title!= item.title
    if item.descr
      .descr!= item.descr
    if item.note
      .note!= item.note
    button.button.button-size-md= item.link.title
    .catalog__item-sign(style= item.color ? 'background-color: ' + item.color + ';' : 'background-color: #A1BF35;')