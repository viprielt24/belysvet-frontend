.popup.popup--addNewSpecification.js-popup-edit-specification
  .popup__wrap
    .popup__header
      a(href="javascript:void(0);" data-popupname="edit-specification").popup__header-close.js-popup-close: .icon.icon--close.icon--close-dark
    .popup__content
      .popup__content-header
        .popup__content-title!='Редактирование спецификации'

      .popup__form.form.form--style: form(action="javascript:void(0);")
        .form-wrap
          .form-group
            .form-element: label
              .form-placeholder!='Название спецификации'
              input(placeholder='Введите название спецификации' value="Спецификации №1").form-control
          .form-group
            .form-element: label
              .form-placeholder!='Название бренда (торговой марки) организации'
              input(placeholder='Введите название вашего бренда' value="Веселые Светила").form-control
          .form-group
            .form-element: label
              .form-placeholder!='Комментарий'
              textarea(rows="4").form-control!='Тут будет комментарий к спецификации, который оставляют при желании в момент создания спецификации, тут будет комментарий к объекту, который оставляют при желании в момент'

        .popup__buttonGroup
          a(href="javascript:void(0);" data-popupname="edit-specification").button.buttonWhitoutBorder.button--empty.js-popup-close: span!='Отменить'
          a(href="javascript:void(0);" data-popupname="edit-specification").button.buttonFixSize.js-popup-close!='Сохранить'