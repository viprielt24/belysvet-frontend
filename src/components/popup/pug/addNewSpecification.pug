.popup.popup--editSpecification.js-popup-add-new-specification
  .popup__wrap
    .popup__header
      a(href="javascript:void(0);" data-popupname="add-new-specification").popup__header-close.js-popup-close: .icon.icon--close.icon--close-dark
    .popup__content
      .popup__content-header
        .popup__content-title Создание спецификации

      .popup__form.form.form--style: form(action="javascript:void(0);")
        .form-wrap
          .form-group
            .form-element: label
              .form-placeholder Название спецификации
              input(placeholder='Введите название спецификации').form-control
          .form-group
            .form-element: label
              .form-placeholder Техническое решение
              include ../../../pages/common/project-solution-common
          .form-group
            .form-element: label
              .form-placeholder Название бренда (торговой марки) организации
              input(placeholder='Введите название вашего бренда').form-control
          .form-group
            .form-element: label
              .form-placeholder Объект
              include ../../../pages/common/object-select-common
          .popup__rightMessage Для того, чтобы объект появился в списке, его необходимо<br />создать в Личном кабинете в разделе Объекты. <br /><a href="javascript:void(0);" class="popup__rightMessageLink">Перейти в раздел Объекты</a>
          .form-group
            .form-element: label
              .form-placeholder Комментарий
              textarea(rows="4").form-control

        .popup__buttonGroup
          a(href="javascript:void(0);" data-popupname="add-new-specification").button.buttonWhitoutBorder.button--empty.js-popup-close: span отменить
          a(href="javascript:void(0);" data-popupname="add-new-specification").button.buttonFixSize.js-popup-close Создать