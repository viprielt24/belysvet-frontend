mixin personInformation(image,fio,id,typeProfile,mobile,email,position,pol,discount,bonus,termsPayment,balance,credit, buttons)
  .personInfoCard
    .personInfoCard__wrap
      .personInfoCard__person
        .personInfoCard__icon(class= !image ? 'personCard__icon--empty' : '')
          if image
            img(src=image alt=fio)
        .personInfoCard__name
          if fio
            .personInfoCard__fio!= fio
      .personInfoCard__data
        .personInfoCard__dataGroup
          if id
            .personInfoCard__dataItem
              span!='ID пользователя: '
              = ' '
              span!= id
          if typeProfile
            .personInfoCard__dataItem
              span!='Тип профиля: '
              = ' '
              span!= typeProfile
          if mobile
            .personInfoCard__dataItem
              span!='Мобильный телефон:'
              = ' '
              span!=mobile
          if email
            .personInfoCard__dataItem.personInfoCard__dataItem--help
              span!='E-mail:'
              = ' '
              a(href='mailto:'+email)!=email
              .accordion__help.js-accordion__help(
                class="hint hint--white hint--left hint--userSale"
                data-popupname="hintfileattach"
                aria-label="Текстовая подсказка по соответствующей теме."
              )
                include ../../images/question.svg
          if position
            .personInfoCard__dataItem
              span!='Должность: '
              = ' '
              span!= position
          if pol
            .personInfoCard__dataItem.personInfoCard__dataItem--pol
              span!='Пол: '
              = ' '
              span!= pol
        .personInfoCard__dataGroup
          if discount
            .personInfoCard__dataItem.personInfoCard__dataItem--green
              span!='Скидка: '
              = ' '
              span!= discount
          if bonus
            .personInfoCard__dataItem.personInfoCard__dataItem--green
              span!='Бонусы: '
              = ' '
              span!= bonus
          if termsPayment
            .personInfoCard__dataItem.personInfoCard__dataItem--green
              span!='Условия оплаты: '
              = ' '
              span!= termsPayment
          if balance
            .personInfoCard__dataItem.personInfoCard__dataItem--red
              span!='Баланс: '
              = ' '
              span!= balance
          if credit
            .personInfoCard__dataItem.personInfoCard__dataItem--green
              span!='Кредит: '
              = ' '
              span!= credit
      .personInfoCard__buttons
        each button in buttons
          if button.type == 'edit-password'
            a(
              href=button.href
              data-popupname=button.dataPopupname
              class=button.class
            ).button.buttonEdit!=button.label
          else if button.type == 'edit-profile'
            a(
              href=button.href
              data-popupname=button.dataPopupname
              class=button.class
            ).button.buttonEdit!=button.label
          else if button.type == 'delete-profile'
            a(
              href=button.href
              data-popupname=button.dataPopupname
              class=button.class
            ).button.buttonDelete
              .icon--close.icon--close-smaller.icon--close-red.icon--delete
              span!=button.label