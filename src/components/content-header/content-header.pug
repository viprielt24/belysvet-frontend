      .content__bottom.content__bottom--project-inner
        h1.title!= pageName
        a(href="javascript:void(0);").link Посмотреть отзыв

  else if page === 'signone'
    .content__top.content__top--signone: include ../../pages/common/batch-common
    .content__bottom
      h1.title!= pageName

  else if page === 'aruna'
    - batchName= 'ARUNA'
    .content__top.content__top--signone: include ../../pages/common/batch-common
    .content__bottom
      h1.title!= pageName

  else if page === 'emunit'
    - batchName= 'INEXI'
    .content__top.content__top--signone.content__top--batch-active: include ../../pages/common/batch-common
    .content__bottom
      h1.title!= pageName

  else if page === 'aruna-product'
    - batchName= 'ARUNA'
    .content__top.content__top--signone.content__top--batch-active: include ../../pages/common/batch-common
    a(href="javascript:void(0);").link.link--back.content__top-aruna-product
      .link__icon: include ../../images/arrow-right-small.svg
      .link__text На страницу серии
    .content__bottom
      h1.title!= pageName

  else if page === 'checkout'
    .content__bottom.content__bottom--checkout
      .content__support
        .content__support-title Есть вопрос?
        .content__support-bottom
         .content__support-descr Позвоните в службу поддержки
         a(href="javascript:void(0);").link +7 (495) 785-17-67
      h1.title!= pageName

  else if page === 'card'
    if isDesktop
      .content__bottom.content__bottom--checkout
        .content__support
          .content__support-title Есть вопрос?
          .content__support-bottom
           .content__support-descr Позвоните в службу поддержки
           a(href="javascript:void(0);").link +7 (495) 785-17-67
        h1.title!= pageName
    else
      h1.title.title--card!= pageName
      .content__bottom.content__bottom--checkout
        .content__support
          .content__support-title Есть вопрос?
          .content__support-bottom
            .content__support-descr Позвоните в службу поддержки
            a(href="javascript:void(0);").link +7 (495) 785-17-67

  else if page === 'card-empty'
    .content__bottom.content__bottom--checkout
      if isDesktop
        .content__support
          .content__support-title Есть вопрос?
          .content__support-bottom
           .content__support-descr Позвоните в службу поддержки
           a(href="javascript:void(0);").link +7 (495) 785-17-67
        h1.title!= pageName
      else
        h1.title!= pageName
        .content__support
          .content__support-title Есть вопрос?
          .content__support-bottom
            .content__support-descr Позвоните в службу поддержки
            a(href="javascript:void(0);").link +7 (495) 785-17-67

  else if page === 'compare'
    .content__bottom
      h1.title!= pageName
    .content__top.content__top--signone: include ../../pages/common/tagline
    if isMobile
      .compare__maincel
        .compare__maincel-wrap.js-compare__maincel-wrap
          //- контроль
          .compare__maincel-control
            .compare__clear.js-compare__clear
              a(href="javascript:void(0);").compare__clear-link
                .icon.icon--close.icon--close-primary.icon--inline: include ../../images/close.svg
                | Очистить весь список
            .compare__print.js-compare__print
              a(href="javascript:void(0);").compare__print-link
                .icon.icon--print.icon--inline: include ../../images/print.svg
                | Распечатать список
          //- выбор
          .compare__maincel-choose
            .title Показать
            .form-group
              .form-element
                label.label.label--radio
                  input.form-control(type="radio" checked='' name="compare")
                  .icon.icon--radio
                  .label__text Все параметры
              .form-element
                label.label.label--radio
                  input.form-control(type="radio" name="compare")
                  .icon.icon--radio
                  .label__text Только отличия
        .compare__maincel-mobile
          - placeholder = 'BS-ARUNA-81-L1-INEXI2'
          include ../../pages/common/project-position-common
          - placeholder = 'BS-ARUNA-81-L1-INEXI2'
          include ../../pages/common/project-position-common

  else if page === 'solution'
    .content__top.content__top--signone: include ../../pages/common/tagline
    .content__top-links
      a(href="javascript:void(0);" data-popupname="solution").link.link--icon.link--icon-path-fill.js-popup-open
        .icon.icon--inline.icon--pencil: include ../../images/pencil.svg
        .link__text Заявка на составление технического задания
      a(href="javascript:void(0);").link.link--icon.link--icon-path-fill
        .icon.icon--inline.icon--stack: include ../../images/stack.svg
        .link__text Реализованные проекты
      a(href="javascript:void(0);").link.link--icon.link--icon-path-fill
        .icon.icon--inline.icon--video: include ../../images/video.svg
        .link__text Видео
    .content__bottom
      h1.title!= pageName

  else
    div(class= pageDescr ? 'content__bottom content__bottom--descr' : 'content__bottom')
      if pageName
        h1.title!= pageName
      if pageDescr
        .descr!= pageDescr