mixin brands-item(item)
  a(href="javascript:void(0);").catalog__item
    .catalog__item-media: .pic
      img(src= item.img).pic__img
    .catalog__item-wrap
      .title!= item.title
      if item.text
        .descr!= item.text
    if item.description
      .text!= item.description
    .catalog__item-sign(style= item.color ? 'background-color: ' + item.color + ';' : 'background-color: #A1BF35;')